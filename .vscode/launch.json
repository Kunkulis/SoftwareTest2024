{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug WordProcessor",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Main", // Adjust the path if necessary
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: build",
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",             
            "logging": {
                "moduleLoad": false,
                "trace": false,
                "engineLogging": false,
                "programOutput": true,
                "exceptions": false
            }
        }
    ]
}